
@model GoogleSearch.Models.SearchRequest

@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<div>
    This page allow user to modify the search keywords and some other search parameters.
    Click the Search button it will do the search with the updated parameters.
</div>

<div class="text-center">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label"></label>
                    <input asp-for="Keywords" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BaseAddress" class="control-label"></label>
                    <input asp-for="BaseAddress" class="form-control" readonly="True" />
                </div>
                <div class="form-group">
                    <label asp-for="PageSize" class="control-label"></label>
                    <input asp-for="PageSize" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Page" class="control-label"></label>
                    <input asp-for="Page" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="TargetUrl" class="control-label"></label>
                    <input asp-for="TargetUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
